<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="3000dp"
    android:padding="16dp"
    android:background="@color/darkGrey">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner"
                android:hint="Lecture Name"
                android:inputType="text"
                android:padding="15dp"
                />

            <Button
                android:id="@+id/EditTextbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit" />

        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">
        <!--text view for displaying course duration-->

        <TextView

            android:id="@+id/date"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="Date"
            android:textSize="20sp"
             />

        <!--button for dismissing our dialog-->
        <Button
            android:id="@+id/idBtnDatePicker"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Add Date"
            android:textAllCaps="true"
            android:layout_below="@id/btnDatePicker"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

        <Spinner
            android:id="@+id/daySpinner"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:entries="@array/days"
            android:outlineSpotShadowColor="@color/darkGrey"
            android:textSize="20sp"
            tools:targetApi="p" />

        <Button
            android:id="@+id/idBtnSelectDay"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Select Day"
            android:textAllCaps="true"
            android:layout_below="@id/idBtnDatePicker"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/StartTime"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="Start time"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/idBtnStartTime"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Start Time"
            android:textAllCaps="true"
            android:layout_below="@id/idBtnStartTime"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/endtime"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="End time"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/idBtnEndTime"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="End Time"
            android:textAllCaps="true"
            android:layout_below="@id/idBtnStartTime"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"/>
    </LinearLayout>


        <Button
            android:id="@+id/idBtnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Submit"
            android:textAllCaps="true"
            android:padding="16dp"
            android:textSize="18sp"
            android:background="@drawable/rounded_corner"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
